<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" tools:context = ".CreateGroup">

    <TextView
        android:text = "Register"
        android:fontFamily="cursive"
        android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/textview"
        android:textSize = "45dp"
        android:layout_marginLeft="95dp"
        android:layout_marginStart="95dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/emailID"
        android:textColorHint="#ffff299f"
        android:hint="EmailID"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textview"
        android:layout_alignLeft="@+id/userPassword"
        android:layout_alignStart="@+id/userPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/userPassword"
        android:textColorHint="#ffff299f"
        android:hint="Admin Password"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/adminUserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp" />

    <EditText
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/groupName"
        android:hint = "Group Name"
        android:ems="10"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#ffff25e6"
        android:layout_marginTop="30dp"
        android:inputType="text"
        android:layout_below="@+id/emailID"
        android:layout_alignLeft="@+id/emailID"
        android:layout_alignStart="@+id/emailID" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/adminUserName"
        android:textColorHint="#ffff299f"
        android:hint="Admin UserName"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/groupName"
        android:layout_alignLeft="@+id/groupName"
        android:layout_alignStart="@+id/groupName" />

    <Button style="@style/Widget.AppCompat.Button.Colored"
        android:background="#3385ff"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/register"
        android:elevation="3dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/userPassword"
        android:layout_alignStart="@+id/userPassword" />

</RelativeLayout>